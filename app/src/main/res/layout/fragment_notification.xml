<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout_notifications"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:tabIndicatorColor="@color/puple50"
    app:tabIndicatorHeight="4dp"
    app:tabGravity="center"
    app:tabMode="scrollable"
    app:tabRippleColor="@color/orange20"
    app:tabSelectedTextColor="@color/puple50"
    app:tabTextColor="@color/secondary_text_dark"
    android:layout_marginBottom="8dp" />

    <!-- ViewPager2 để hiển thị từng thông báo -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager_notifications"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
    android:clipToPadding="false"
    android:paddingHorizontal="16dp" />

</LinearLayout>